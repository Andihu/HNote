<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <ImageButton
                    android:id="@+id/subscript_2"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_subscript_2" />

                <ImageView
                    android:id="@+id/superscript_2"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:padding="5dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_superscript_2" />

                <ImageView
                    android:id="@+id/strikethrough"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    
                    android:src="@drawable/ic_strikethrough" />

                <ImageView
                    android:id="@+id/italic"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    
                    android:src="@drawable/ic_italic"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/under_line"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    
                    android:padding="8dp"
                    android:src="@drawable/ic_underline" />

                <ImageView
                    android:id="@+id/text_font_size"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    
                    android:src="@drawable/ic_text_font_size_1" />

                <ImageView
                    android:id="@+id/text_color"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    
                    android:src="@drawable/ic_text_color" />

                <ImageView
                    android:id="@+id/text_background_color"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    
                    android:src="@drawable/ic_text_background_color" />

            </TableRow>

            <TableRow>
                <ImageView
                    android:id="@+id/indent"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    
                    android:src="@drawable/ic_indent" />

                <ImageView
                    android:id="@+id/outdent"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    
                    android:src="@drawable/ic_outdent" />

                <ImageView
                    android:id="@+id/ordered_list"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    
                    android:src="@drawable/ic_ordered_list" />

                <ImageView
                    android:id="@+id/text_justify_left"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_text_justify_left" />

                <ImageView
                    android:id="@+id/text_justify_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_text_justify_right" />

            </TableRow>

            <TableRow>
                <ImageView
                    android:id="@+id/heading_1"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="7dp"
                    
                    android:src="@drawable/ic_heading_1" />

                <ImageView
                    android:id="@+id/heading_2"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="7dp"
                    
                    android:src="@drawable/ic_heading_2" />

                <ImageView
                    android:id="@+id/heading_3"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="7dp"
                    
                    android:src="@drawable/ic_heading_3" />
                
            </TableRow>
            
        </TableLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:drawableTop="@drawable/ic_blod"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="加粗"
                android:textColor="#1479AA"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#89B5FF" />

            <TextView
                android:id="@+id/blockquote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:drawableTop="@drawable/ic_blockquote"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="引用"
                android:textColor="#1479AA"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#89B5FF" />

            <TextView
                android:id="@+id/unordered_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:drawableTop="@drawable/ic_unordered_list__1_"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="列表"
                android:textColor="#1479AA"
                android:textSize="10sp"
                android:textStyle="bold" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#89B5FF" />

            <TextView
                android:id="@+id/justify_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:drawableTop="@drawable/ic_text_justify_center"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="居中"
                android:textColor="#1479AA"
                android:textSize="10sp"
                android:textStyle="bold" />
            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#89B5FF" />

            <TextView
                android:id="@+id/heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:drawableTop="@drawable/ic_heading_1"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="标题"
                android:textColor="#1479AA"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</layout>